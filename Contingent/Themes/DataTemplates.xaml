<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Contingent.Themes"
                    xmlns:model="clr-namespace:Model.Astu;assembly=Model"
                    xmlns:control="clr-namespace:Contingent.Themes.Controls">

    <Style x:Key="ExpanderInfo"
           TargetType="Expander">
        <Setter
            Property="BorderBrush"
            Value="ForestGreen"/>
        <Setter
            Property="Background"
            Value="#FFD5FFA3"/>
        <Setter
            Property="ExpandDirection"
            Value="Down"/>
        <Setter
            Property="IsExpanded"
            Value="True"/>
        <Setter
            Property="Header"
            Value="Информация"/>
        <Setter
            Property="MaxHeight"
            Value="100"/>
        <Setter
            Property="MaxWidth">
            <Setter.Value>
                <Binding Path="ActualWidth" Mode="OneWay">
                    <Binding.RelativeSource>
                        <RelativeSource
                            Mode="FindAncestor"
                            AncestorType="{x:Type control:ExDataGrid}"/>
                    </Binding.RelativeSource>
                </Binding>                
            </Setter.Value>
        </Setter>
        <Setter
            Property="HorizontalAlignment"
            Value="Left"/>
        <Setter
            Property="VerticalAlignment"
            Value="Top"/>
    </Style>

    <Style
        TargetType="WrapPanel">
        <Setter
            Property="ScrollViewer.VerticalScrollBarVisibility"
            Value="Disabled"/>
        <Setter
            Property="Background"
            Value="#FFD5FFA3"/>
        <Setter
            Property="Orientation"
            Value="Vertical"/>
        <Setter
            Property="MaxHeight"
            Value="100"/>
    </Style>

    <DataTemplate x:Key="EnrollmentOrderDataTemplate">
        <Grid>
            <Expander
                Style="{StaticResource ResourceKey=ExpanderInfo}">
                <WrapPanel>
                    <control:EntityInfo
                        Title="Группа"
                        Value="{Binding Path=Group.Name}"/>
                    <control:EntityInfo
                        Title="Факультет"
                        Value="{Binding Path=Faculty.ShortName}"/>
                    <control:EntityInfo
                        Title="Категория"
                        Value="{Binding Path=FinanceSource.Name}" Background="{x:Null}"/>
                    <control:EntityInfo
                        Title="Направление"
                        Value="{Binding Path=Direction.DisplayName}"/>
                    <control:EntityInfo
                        Title="Форма"
                        Value="{Binding Path=EducationForm.Name}"/>
                    <control:EntityInfo
                        Title="Курс"
                        Value="{Binding Path=NewCourse}"/>
                    <control:EntityInfo
                        Title="Дата начала обучения"
                        Value="{Binding Path=StartDate, Converter={StaticResource DateConverter}}"/>
                </WrapPanel>
            </Expander>
        </Grid>
    </DataTemplate>

