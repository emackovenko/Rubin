<UserControl x:Class="Contingent.Themes.Controls.EntityInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Contingent.Themes.Controls"
             mc:Ignorable="d"
             x:Name="parentControl">
    <StackPanel
        Margin="5"
        MaxWidth="350"
        Orientation="Horizontal">
        <TextBlock 
            Text="{Binding ElementName=parentControl, Path=Title, StringFormat={}{0}:, Mode=OneWay}"/>
        <TextBlock
            Text="{Binding ElementName=parentControl, Path=Value, Mode=OneWay}" 
            Style="{StaticResource AuxularyInfoTextBox}"/>
    </StackPanel>
</UserControl>
