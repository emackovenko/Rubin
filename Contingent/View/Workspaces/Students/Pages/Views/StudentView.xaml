<UserControl x:Class="Contingent.View.Workspaces.Students.Pages.Views.StudentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Contingent.View.Workspaces.Students.Pages.Views"
             xmlns:control="clr-namespace:Contingent.Themes.Controls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:Contingent.ViewModel.Workspaces.Students"
             xmlns:selector="clr-namespace:Contingent.Themes.Selectors"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
             mc:Ignorable="d" 
             Width="1024"
             Height="460">
    <TabControl>
        <TabItem
            Header="Личные данные">
            <Grid
        Background="Beige">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="12"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="32"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto"/>
                    <ColumnDefinition
                        Width="3"/>
                    <ColumnDefinition
                        Width="*"/>
                    <ColumnDefinition
                        Width="3"/>
                    <ColumnDefinition
                        Width="Auto"/>
                    <ColumnDefinition
                        Width="3"/>
                    <ColumnDefinition
                        Width="*"/>
                </Grid.ColumnDefinitions>
                <GroupBox
                    BorderBrush="DarkBlue"
                    Header="Персональные данные"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="7"
                    Grid.RowSpan="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="*"/>
                            <RowDefinition
                                Height="*"/>
                            <RowDefinition
                                Height="*"/>
                            <RowDefinition
                                Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="Auto"/>
                            <ColumnDefinition
                                Width="3"/>
                            <ColumnDefinition
                                Width="6*"/>
                            <ColumnDefinition
                                Width="5"/>
                            <ColumnDefinition
                                Width="Auto"/>
                            <ColumnDefinition
                                Width="3"/>
                            <ColumnDefinition
                                Width="8*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Text="Ф.И.О."/>
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Width="270"
                            Text="{Binding Path=Student.FullName, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Text="Пол"/>
                        <ComboBox
                            Grid.Row="1"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Width="60"
                            Text="{Binding Path=Student.Gender, UpdateSourceTrigger=PropertyChanged}">
                            <sys:String>м</sys:String>
                            <sys:String>ж</sys:String>
                        </ComboBox>
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Text="Дата рождения"/>
                        <DatePicker
                            Grid.Row="2"
                            Grid.Column="2"
                            Width="100"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            SelectedDate="{Binding Path=Student.BirthDate, UpdateSourceTrigger=PropertyChanged}"/>
                        <CheckBox
                            Grid.Row="3"
                            Grid.ColumnSpan="3"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Style="{StaticResource HostelNeedingCheckBox}"
                            IsChecked="{Binding Path=Student.IsNeedHostel, UpdateSourceTrigger=PropertyChanged}"/>
                       <!-- <StackPanel
                            Grid.Row="0"
                            Grid.Column="4"
                            Grid.RowSpan="2"
                            Grid.ColumnSpan="3"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,3,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Text="Адрес"/>
                            <TextBox                 
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Height="48"
                                Width="390"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                Text=""/>
                            <Button
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="6"
                            Height="23"
                            Width="23"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Content="..."
                            ToolTip="Собрать адрес"/>
                        </StackPanel>
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="4"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Text="Место жительства"/>
                        <ComboBox
                            Grid.Column="6"
                            Grid.Row="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Width="350"
                            SelectedItem=""/> -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="4"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Text="Гражданство"/>
                        <ComboBox
                            Grid.Column="6"
                            Grid.Row="3"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Width="350"
                            ItemsSource="{Binding Path=Citizenships}"
                            SelectedItem="{Binding Path=Student.Citizenship, UpdateSourceTrigger=PropertyChanged}"
                            DisplayMemberPath="Name"/>
                    </Grid>
                </GroupBox>
                <Grid
                    Grid.Row="5"
                    Grid.RowSpan="9"
                    Grid.ColumnSpan="7">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="4*"/>
                        <RowDefinition
                            Height="3"/>
                        <RowDefinition
                            Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="4*"/>
                        <ColumnDefinition
                            Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox
                        BorderBrush="DarkBlue"
                        Header="Документ, удостоверяющий личность"
                        Grid.Row="0"
                        Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto"/>
                                <ColumnDefinition
                                    Width="3"/>
                                <ColumnDefinition
                                    Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.ColumnSpan="3"
                                Orientation="Horizontal">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Margin="0,0,3,0"
                                    Text="Серия"/>
                                <TextBox
                                    Margin="0,0,10,0"
                                    Height="23"
                                    Width="50"
                                    Text="{Binding Path=Student.IdentityDocumentSeries, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Номер"/>
                                <TextBox
                                    Height="23"
                                    Width="100"
                                    Text="{Binding Path=Student.IdentityDocumentNumber, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Text="Дата выдачи"/>
                            <DatePicker
                                Grid.Row="1"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="100"
                                SelectedDate="{Binding Path=Student.IdentityDocumentDate, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Text="Кем выдан"/>
                            <ComboBox
                                Grid.Row="2"
                                Grid.Column="4"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="440"
                                Text="{Binding Path=Student.IdentityDocumentOrganization, UpdateSourceTrigger=PropertyChanged}" 
                                ItemsSource="{Binding Path=IdentityDocumentOrganizations}"
                                IsEditable="True"/>
                            <StackPanel
                                Grid.Row="3"
                                Grid.ColumnSpan="3"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Место рождения"/>
                                <TextBox
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Width="415"
                                    Text="{Binding Path=Student.BirthPlace, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button
                                    Height="21"
                                    Width="21"
                                    ToolTip="Собрать место рождения"
                                    Content="..."
                                    Command=""
                                    IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        BorderBrush="DarkBlue"
                        Header="Документ об образовании"
                        Grid.Row="2"
                        Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                   Width="Auto"/>
                                <ColumnDefinition
                                    Width="3"/>
                                <ColumnDefinition
                                    Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.ColumnSpan="3"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Серия"/>
                                <TextBox
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Width="150"
                                    Text="{Binding Path=Student.GraduationDocumentSeries, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock
                                    Margin="0,0,3,0"
                                    VerticalAlignment="Center"
                                    Text="Номер"/>
                                <TextBox
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Width="150"
                                    Text="{Binding Path=Student.GraduationDocumentNumber, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Text="Дата выдачи"/>
                            <DatePicker
                                Grid.Row="1"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="100"
                                SelectedDate="{Binding Path=Student.GraduationDocumentDate, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Text="Вид документа"/>
                            <ComboBox
                                Grid.Row="2"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="400"
                                ItemsSource="{Binding Path=GraduationDocumentTypes}"
                                SelectedItem="{Binding Path=Student.GraduationDocumentType, UpdateSourceTrigger=PropertyChanged}"
                                DisplayMemberPath="Name"/>
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Text="Организация"/>
                            <ComboBox
                                Grid.Row="3"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="400"
                                SelectedItem=""/>
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Text="Ин. язык"/>
                            <ComboBox
                                Grid.Row="4"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="200"
                                ItemsSource="{Binding Path=ForeignLanguages}"
                                SelectedItem="{Binding Path=Student.ForeignLanguage, UpdateSourceTrigger=PropertyChanged}"
                                DisplayMemberPath="Name"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Header="Учебная информация"
                        BorderBrush="DarkBlue"
                        Grid.Row="0"
                        Grid.Column="1"
                        Grid.RowSpan="3">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                                <RowDefinition
                                    Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto"
                                    MaxWidth="100"/>
                                <ColumnDefinition
                                    Width="3"/>
                                <ColumnDefinition
                                    Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                TextWrapping="Wrap"
                                Text="Статус"/>
                            <ComboBox
                                Grid.Row="0"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="170"
                                ItemsSource="{Binding Path=StudentStatuses}"
                                DisplayMemberPath="Name"
                                SelectedItem="{Binding Path=Student.Status, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                TextWrapping="Wrap"
                                Text="Группа"/>
                            <ComboBox
                                Grid.Row="1"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="170"
                                ItemsSource="{Binding Path=StudentGroups}"
                                SelectedItem="{Binding Path=Student.Group, UpdateSourceTrigger=PropertyChanged}"
                                DisplayMemberPath="Name"/>
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                TextWrapping="Wrap"
                                Text="Факультет"/>
                            <ComboBox
                                Grid.Row="2"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="170"
                                ItemsSource="{Binding Path=Faculties}"
                                SelectedItem="{Binding Path=Student.Faculty, UpdateSourceTrigger=PropertyChanged}"
                                DisplayMemberPath="ShortName"/>
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                TextWrapping="Wrap"
                                Text="Специальность"/>
                            <ComboBox
                                Grid.Row="3"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="170"
                                ItemsSource="{Binding Path=Directions}"
                                SelectedItem="{Binding Path=Student.Direction, UpdateSourceTrigger=PropertyChanged}"
                                DisplayMemberPath="ShortName"/>
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                TextWrapping="Wrap"
                                Text="Форма обуч."/>
                            <ComboBox
                                Grid.Row="4"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="170"
                                ItemsSource="{Binding Path=EducationForms}"
                                DisplayMemberPath="Name"
                                SelectedItem="{Binding Path=Student.EducationForm, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Text="Категория обуч."/>
                            <ComboBox
                                Grid.Row="5"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="170"
                                ItemsSource="{Binding Path=FinanceSources}"
                                DisplayMemberPath="Name"
                                SelectedItem="{Binding Path=Student.FinanceSource, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Text="Вид стипендии"/>
                            <ComboBox
                                Grid.Row="6"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="170"
                                ItemsSource="{Binding Path=GrantTypes}"
                                DisplayMemberPath="Name"
                                SelectedItem="{Binding Path=Student.GrantType, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock
                                Grid.Row="7"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Text="Год приёма"/>
                            <TextBox
                                Grid.Row="7"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="100"
                                Text="{Binding Path=Student.AdmissionYear, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock
                                Grid.Row="8"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Text="Рег. номер"/>
                            <TextBox
                                Grid.Row="8"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Width="100"
                                Text="{Binding Path=Student.RegistrationNumber, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>
        </TabItem>
        <TabItem
            Header="Приказы">
            <Grid
                Background="Beige">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Orientation="Horizontal">
                    <xctk:DropDownButton
                        ToolTip="Добавить приказ"
                        IsEnabled="False"
                        BorderBrush="{StaticResource ResourceKey=ToolButtonBorder}"
                        Background="{x:Null}">  
                        <xctk:DropDownButton.DropDownContent>
                            <StackPanel
                                Orientation="Vertical">
                                <MenuItem
                                    Header="Приказ о зачислении"
                                    Command="{Binding Path=AddEnrollmentOrderCommand}"/>
                                <MenuItem
                                    Header="Приказ о зачислении в порядке перевода из другого ВУЗа"
                                    Command="{Binding Path=AddEnrollmentByUniversityTransferOrderCommand}"/>
                            </StackPanel>
                        </xctk:DropDownButton.DropDownContent>
                        <Image Style="{StaticResource PictureAdd}"/>
                    </xctk:DropDownButton>
                    <Button
                        Style="{StaticResource ToolButton}"
                        ToolTip="Редактировать запись">
                        <Image Style="{StaticResource PictureEdit}"/>
                    </Button>
                    <Button
                        Style="{StaticResource ToolButton}"
                        ToolTip="Удалить запись">
                        <Image Style="{StaticResource PictureDelete}"/>
                    </Button>
                </StackPanel>
                <control:ExDataGrid
                    Grid.Row="1"
                    ItemsSource="{Binding Path=Student.Orders}"
                    SelectedItem="{Binding Path=SelectedOrder}">
                    <DataGrid.RowDetailsTemplateSelector>
                        <selector:StudentOrderTemplateSelector
                            EnrollmentOrderDataTemplate="{StaticResource EnrollmentOrderDataTemplate}"
                            DefaultOrderDataTemplate="{StaticResource DefaultOrderDataTemplate}"/>
                    </DataGrid.RowDetailsTemplateSelector>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Header="Номер"
                            Binding="{Binding Path=Number}"/>
                        <DataGridTextColumn
                            Header="Дата"
                            Binding="{Binding Path=Date, Converter={StaticResource DateConverter}}"/>
                        <DataGridTextColumn
                            Header="Тип приказа"
                            Binding="{Binding Path=OrderType.Name}"/>
                        <DataGridTextColumn
                            Header="Комментарий"
                            Binding="{Binding Path=Comment}"/>
                    </DataGrid.Columns>                    
                </control:ExDataGrid>
            </Grid>
        </TabItem>
        <TabItem 
            Header="Документы">
            <Grid
                Background="Beige">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Orientation="Horizontal">
                    <xctk:DropDownButton
                        ToolTip="Добавить документ"
                        BorderBrush="{StaticResource ResourceKey=ToolButtonBorder}"
                        Background="{x:Null}">
                        <xctk:DropDownButton.DropDownContent>
                            <StackPanel
                                Orientation="Vertical">
                                <MenuItem
                                    Header="Документ, удостоверяющий личность"
                                    Command="{Binding Path=AddIdentityDocumentCommand}"/>
                                <MenuItem
                                    Header="Документ об образовании"
                                    IsEnabled="False"
                                    Command=""/>
                                <MenuItem
                                    Header="Документ, подтверждающий принадлежность к детям-сиротам"
                                    IsEnabled="False"
                                    Command=""/>
                                <MenuItem
                                    Header="Справка об установлении инвалидности"
                                    IsEnabled="False"
                                    Command=""/>
                            </StackPanel>
                        </xctk:DropDownButton.DropDownContent>
                        <Image Style="{StaticResource PictureAdd}"/>
                    </xctk:DropDownButton>
                    <Button
                        ToolTip="Редактировать документ"
                        Command="{Binding Path=EditChildEntityCommand}"
                        CommandParameter="{Binding Path=SelectedItem, ElementName=documentGrid}"
                        Style="{StaticResource ToolButton}">
                        <Image Style="{StaticResource PictureEdit}"/>
                    </Button>
                    <Button
                        ToolTip="Удалить документ"
                        Command="{Binding Path=RemoveChildEntityCommand}"
                        CommandParameter="{Binding Path=SelectedItem, ElementName=documentGrid}"
                        Style="{StaticResource ToolButton}">
                        <Image Style="{StaticResource PictureDelete}"/>
                    </Button>
                </StackPanel>
                <control:ExDataGrid
                    x:Name="documentGrid"
                    Grid.Row="1"
                    ItemsSource="{Binding Path=Student.Documents}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Header="Тип документа"
                            Binding="{Binding Path=DocumentType.Name}"/>
                        <DataGridCheckBoxColumn
                            Header="Архивный"
                            Binding="{Binding Path=IsArchival}"/>
                        <DataGridTextColumn
                            Header="Серия"
                            Binding="{Binding Path=Series}"/>
                        <DataGridTextColumn
                            Header="Номер"
                            Binding="{Binding Path=Number}"/>
                        <DataGridTextColumn
                            Header="Дата выдачи"
                            Binding="{Binding Path=Date, Converter={StaticResource DateConverter}}"/>
                    </DataGrid.Columns>
                </control:ExDataGrid>
            </Grid>
        </TabItem>
        <TabItem 
            Header="Другая информация">
        </TabItem>
    </TabControl>
</UserControl>
