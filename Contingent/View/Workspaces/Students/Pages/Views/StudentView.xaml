                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="32"/>
                    <RowDefinition
                        Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Orientation="Horizontal">
                    <Button
                        Style="{StaticResource ToolButton}"
                        ToolTip="Добавить запись">
                        <Image Style="{StaticResource PictureAdd}"/>
                    </Button>
                    <Button
                        Style="{StaticResource ToolButton}"
                        ToolTip="Редактировать запись">
                        <Image Style="{StaticResource PictureEdit}"/>
                    </Button>
                    <Button
                        Style="{StaticResource ToolButton}"
                        ToolTip="Удалить запись">
                        <Image Style="{StaticResource PictureDelete}"/>
                    </Button>
                </StackPanel>
                <control:ExDataGrid
                    Grid.Row="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Header="Номер"
                            Binding="{Binding Path=TODO}"/>
                        <DataGridTextColumn
                            Header="Дата"
                            Binding="{Binding Path=TODO}"/>
                        <DataGridTextColumn
                            Header="Тип приказа"
                            Binding="{Binding Path=TODO}"/>
                        <DataGridTextColumn
                            Header="Комментарий"
                            Binding="{Binding Path=TODO}"/>
                    </DataGrid.Columns>                    
