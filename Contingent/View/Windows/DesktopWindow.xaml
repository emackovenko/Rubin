<Window x:Class="Contingent.View.Windows.DesktopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contingent.View.Windows"
        xmlns:student="clr-namespace:Contingent.View.Workspaces.Students"
        xmlns:control="clr-namespace:Contingent.Themes.Controls"
        mc:Ignorable="d"
        Title="Контингент" 
        Height="488.64" 
        Width="1044.533"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen" Icon="/Contingent;component/id_card.ico"
        xmlns:vm="clr-namespace:Contingent.ViewModel.Windows">
    <Window.DataContext>
        <vm:DesktopViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="ContentControl">
            <Style.Triggers>
                <DataTrigger
                        Binding="{Binding Path=IsExistsNewVersion}"
                        Value="True">
                    <Setter
                        Property="Visibility"
                        Value="Visible"/>
                </DataTrigger>
                <DataTrigger
                        Binding="{Binding Path=IsExistsNewVersion}"
                        Value="False">
                    <Setter
                        Property="Visibility"
                        Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="*"/>
            <RowDefinition
                Height="25"/>
        </Grid.RowDefinitions>
        <TabControl>
            <control:ProtectedTabItem
                Title="Студенты"
                Icon="/ResourceLibrary;component/Images/id_cards.png"
                PermissionName="StudentsWorkspace">
                <student:StudentList/>
            </control:ProtectedTabItem>
            <control:ProtectedTabItem
                IsEnabled="False"
                PermissionName="StudentOrdersWorkspace"
                Title="Приказы"
                Icon="/ResourceLibrary;component/Images/briefcase_document.png">    
            </control:ProtectedTabItem>
            <control:ProtectedTabItem
                IsEnabled="False"
                PermissionName="EducationWorkWorkspace"
                Title="Учебная деятельность"
                Icon="/ResourceLibrary;component/Images/graduation_hat.png">    
            </control:ProtectedTabItem>
            <control:ProtectedTabItem 
                IsEnabled="False"
                PermissionName="DictionariesWorkspace"
                Title="Справочники"
                Icon="/ResourceLibrary;component/Images/address_book.png">
            </control:ProtectedTabItem>
            <control:ProtectedTabItem 
                IsEnabled="False"
                PermissionName="ReportWorkspace"
                Title="Отчётность" 
                Icon="/ResourceLibrary;component/Images/chart_donut.png">
            </control:ProtectedTabItem>
            <control:ProtectedTabItem 
                IsEnabled="False"
                PermissionName="ContractWorkspace"
                Title="Договоры об образовании"
                Icon="/ResourceLibrary;component/Images/contract.png">
            </control:ProtectedTabItem>
            <control:ProtectedTabItem 
                IsEnabled="False"
                PermissionName="ServiceWorkspace"
                Title="Сервис"
                Icon="/ResourceLibrary;component/Images/crutch.png">
            </control:ProtectedTabItem>
        </TabControl>
        <Border
            Grid.Row="1"
            BorderBrush="Gray"
            BorderThickness="1">
            <StackPanel
                Orientation="Horizontal"
                FlowDirection="RightToLeft">
                <ContentControl
                    Margin="10,0">
                    <StackPanel
                        Orientation="Horizontal"
                        FlowDirection="LeftToRight">
                        <Image Style="{StaticResource PictureUpdate}" Stretch="None"/>
                        <TextBlock
                            Foreground="Red"
                            VerticalAlignment="Center"
                            Text="Загружены новые обновления. Требуется перезапуск программы." 
                            FontWeight="Bold"/>
                    </StackPanel>
                </ContentControl>
                <TextBlock
                    VerticalAlignment="Center"
                    Margin="5,0">
                    <Hyperlink
                        ToolTip="Проверить наличие обновлений"
                        Command="{Binding Path=CheckUpdatesCommand, IsAsync=True}">
                        <TextBlock
                            Text="{Binding Path=BuildVersion, StringFormat=Версия {0}}"/>
                    </Hyperlink>
                </TextBlock>                
            </StackPanel>
        </Border>
    </Grid>
</Window>
