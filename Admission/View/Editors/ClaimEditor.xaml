                        <ColumnDefinition Width="3"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="10,0,0,0"
                        Text="Регистрационный номер:"/>
                    <TextBlock
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Row="1"
                        Grid.Column="0" 
                        Margin="10,0,0,0"
                        Text="Дата регистрации:"/>
                    <CheckBox
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Row="2"
                        Grid.Column="0" 
                        Margin="10,0,0,0"
                        Content="Нуждается в общежитии" 
                        FlowDirection="RightToLeft"
                        IsChecked="{Binding Path=EditedClaim.IsHostelNeed, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Row="3"
                        Grid.Column="0" 
                        Margin="10,0,0,0"
                        Text="Статус заявления:"/>
