                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Row="4"
                        Grid.Column="0" 
                        Margin="10,0,0,0"
                        Text="Комментарий к статусу:"/>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Height="21"
                        Width="150"         
                        IsReadOnly="True"
                        ToolTip="Будет сгенерирован автоматически при изменении условий приёма"
                        Text="{Binding Path=EditedClaim.Number, UpdateSourceTrigger=PropertyChanged}"/>
                    <DatePicker
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Width="177"
                        DisplayDate="{Binding Path=EditedClaim.RegistrationDate}"
                        SelectedDate="{Binding Path=EditedClaim.RegistrationDate}"/>
                    <ComboBox
                        Grid.Row="3"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Height="21"
                        Width="250"
                        IsEditable="False"
                        SelectedIndex="0"
                        ItemsSource="{Binding Path=ClaimStatuses}"   
                        DisplayMemberPath="Name"
                        SelectedItem="{Binding Path=EditedClaim.ClaimStatus}"/>
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Height="21" 
                        Margin="0,0,10,0"
                        Text="{Binding Path=EditedClaim.StatusComment, UpdateSourceTrigger=PropertyChanged}"/>
                    <CheckBox
                        Grid.Row="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FlowDirection="RightToLeft"
                        Width="200"
                        Style="{StaticResource DocumentsReturningType}"
                        IsChecked="{Binding Path=EditedClaim.PersonalReturning, UpdateSourceTrigger=PropertyChanged}"/>
                    <GroupBox Header="Условия приёма"
                        Grid.Row="6"
                        Grid.ColumnSpan="3" 
                        BorderBrush="#FF6C7A81">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel
                                Orientation="Horizontal"
                                Grid.Row="0">
