                                    ToolTip="Добавить запись"
                                    Height="23"
                                    Width="23"
                                    Margin="1,0,1,0"
                                    Command="{Binding Path=NewClaimConditionCommand}">
                                    <Image Source="/ResourceLibrary;component/Images/Buttons/add2.png"/>
                                </Button>
                                <Button 
                                    ToolTip="Редактировать запись"
                                    Height="23"
                                    Width="23"
                                    Margin="1,0,1,0"
                                    Command="{Binding Path=EditClaimConditionCommand}">
                                    <Image Source="/ResourceLibrary;component/Images/Buttons/pencil.png"/>
                                </Button>
                                <Button 
                                    ToolTip="Удалить запись"
                                    Height="23"
                                    Width="23"
                                    Margin="1,0,1,0"
                                    Command="{Binding Path=RemoveClaimConditionCommand}">
                                    <Image Source="/ResourceLibrary;component/Images/Buttons/delete2.png"/>
                                </Button>
                            </StackPanel>
                            <ListView
                                Grid.Row="1"
                                ItemsSource="{Binding Path=ClaimConditions}"
                                SelectedItem="{Binding Path=SelectedClaimCondition}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn
                                            Header="Форма обучения"
                                            DisplayMemberBinding="{Binding Path=CompetitiveGroup.EducationForm}"/>
                                        <GridViewColumn
                                            Header="Источник финансирования"
                                            DisplayMemberBinding="{Binding Path=CompetitiveGroup.FinanceSource}"/>
                                        <GridViewColumn
                                            Header="Специальность"
                                            DisplayMemberBinding="{Binding Path=CompetitiveGroup.Direction}"/>
                                        <GridViewColumn
                                            Header="Приоритет"
                                            DisplayMemberBinding="{Binding Path=Priority}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </GroupBox>
