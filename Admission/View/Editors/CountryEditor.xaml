<UserControl x:Class="Admission.View.Editors.CountryEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Admission.View.Editors"
             mc:Ignorable="d" 
             Height="32"
             Width="360">
    <Grid
        Background="#FFFFFFCF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="Auto"/>
            <ColumnDefinition
                Width="3"/>
            <ColumnDefinition
                Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock
            Text="Наименование:"
            Margin="5,0,0,0"
            VerticalAlignment="Center"/>
        <TextBox
            Grid.Column="2"
            Height="21"
            VerticalAlignment="Center"
            Margin="0,0,5,0"
            Text="{Binding Path=Country.Name, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
